{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Command Descriptor",
  "description": "JSON schema for command descriptors",
  "$ref": "#/definitions/CommandDescriptor",
  "definitions": {
    "CommandDescriptor": {
      "type": "object",
      "properties": {
        "commandName": {
          "type": "string",
          "minLength": 10
        },
        "definingSystem": {
          "type": "string",
          "minLength": 2
        },
        "description": {
          "type": "string"
        },
        "documentationUrl": {
          "$ref": "common.schema.json#/definitions/url"
        },
        "scope": {
          "type": "string",
          "enum": [
            "public",
            "internal"
          ]
        },
        "topic": {
          "type": "string"
        },
        "compatibilityMode": {
          "$ref": "common.schema.json#/definitions/compatibilityMode"
        },
        "versions": {
          "$ref": "common.schema.json#/definitions/Versions"
        }
      },
      "required": [
        "commandName",
        "description",
        "scope"
      ],
      "additionalProperties": false
    }
  }
}
